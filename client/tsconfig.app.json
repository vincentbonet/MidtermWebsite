{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "node_modules/@types/**/*.d.ts", "server/**/*"],
  "exclude": ["src/**/__tests__/*", "server/middleware/auth.js"],
  "compilerOptions": {
    "composite": true,
    "types": ["node", "vite/client"],
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "allowJs": true,
    "noImplicitAny": false,
    

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}